//implementation of list using array

//implentation of list using array
#include<stdio.h>
#include<stdlib.h>

#define MAX 100
int list[MAX];
int n=0;//stores the length of the list like the actual number of elements present in the list
//inserting an element at the beginning of a list
void insertATbeg(int value){
    if(n==MAX){
        printf("list is full!!!\n");//you cannot insert if the list is full
        return;
    }
    for(int i=n-1;i>=0;i--){
        list[i+1]=list[i];
    } 
    list[0]=value;
    n++;
    printf("Element inserted !!!\n");
}
void insertAtEnd(int value){
    if(n==MAX){
        printf("List is full !!!\n");
        return;
    }
    list[n]=value;
    n++;
    printf("Element Inserted");
}
void insertAtCustom(int pos,int value){
    if(pos<0||pos >= n){
        printf("Invalid position !!\n");
        return;
    }
    for(int i=n-1;i>pos;i--){
        list[i+1]=list[i];
    }
    list[pos]=value;
    n++;
    printf("Element Inserted !!!\n");
    }
    void deleteFromBeg(){
        if(n==0){
            printf("list is empty!!!\n");
            return;
        }
        for(int i=0;i<n;i++){
       list[i]=list[i+1];
        }
        n--;
        printf("element deleted!!!");
     }
        void deleteFromEnd(){
        if (n==0){
            printf("list is empty");
            return;
        }
        n--;
          printf("element deleted ");
    }
    void deleteFromPosition(int pos){
        if(n==0){
            printf("list is empty!!!\n");
            return;
        }
        for(int i=pos; i<n;i++){
            list[i]=list[i+1];
        }
        n--;
        printf("element deleted!!!");
    }
    int search(int value){
        for(int i=0;i<n; i++){
            if(list[i]==value)
            return i;
        }
        return -1;
    }
    void updateList(int pos,int value){
      if(pos<0 || pos>=n){
        printf("invalid position!!!");
        return;

      }
      list[pos]=value;
    printf("list updated!!1");
      }
      void bubbleSort(){
        for(int i=0; i<n-1;i++){
          for(int j=0;j<n-1;j++){
            if(list[j]>list[j+1]){
              int temp = list[j];
              list[j]=list[j+1];
              list[j+1]=temp;

            }
            

          }
        }
      }
    
void displaylist(){
    if(n==0){
        printf("list is empty!!!\n");
        return;
    }
    for(int i=0;i<n;i++){
        printf("%d\t",list[i]);
    }
    printf("\n");
}
int main(){
 while(1){
        printf("1. Insert In Beginning\n");
        printf("2. Insert At End\n");
        printf("3. Insert At Any Position\n");
        printf("4. Delete From Beginning\n");
        printf("5. Delete From End\n");
        printf("6. Delete From Any Position\n");
        printf("7. Display List\n");
        printf("8. Search Element In List\n");
        printf("9. Update Element In List\n");
        printf("10. Sort Element In List\n");
        printf("11. Exit\n \n");
        int choice,data,pos;
        printf("Enter Choice: ");
        scanf("%d", &choice);
        switch(choice){
            case 1:
            printf("Enter data: ");
            scanf("%d",&data);
            insertATbeg(data);
            break;

            case 2:
            printf("Enter data: ");
            scanf("%d",&data);
            insertAtEnd(data);
            break;
            
            case 3:
            printf("Enter data: ");
            scanf("%d",&data);
            printf("Enter pos: ");
            scanf("%d",&pos);
            insertAtCustom(pos,data);
            break;

            case 4:
            deleteFromBeg();
            break;

            case 5:
            deleteFromEnd();
            break;

            case 6:
            printf("enter position:");
            scanf("%d",&pos);
            deleteFromPosition(pos);
            break;

            case 7:
            displaylist();
            break;

            case 8:
            printf("enter searching element:");
            scanf("%d", &data);
            int index= search(data);
            if(index != -1)
            printf("element found at index %d\n",index);
            else
            printf("element not found!!!");
            break;

            case 9:
            printf("enter position:");
            scanf("%d",&pos);
            printf("enter data");
            scanf("%d", &data);
            updateList(pos,data);
            break;

            case 10:
            bubbleSort();
            break;
            case 11:
            exit(0);
            break;
            default:
            printf("invalid choice!!!\n");
        }
        printf("\n\n");
    }
    return 0;
}
